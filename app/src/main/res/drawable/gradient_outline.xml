<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Dégradé horizontal -->
    <gradient
        android:angle="0"
        android:startColor="#20CFF4"
        android:endColor="#FF6B6B"
        android:type="linear" />

    <!-- Coins arrondis -->
    <corners android:radius="8dp"/>

    <!-- Ici on simule la bordure : le fond est le dégradé,
         et l'intérieur est blanc avec padding -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
