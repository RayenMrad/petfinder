<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white_off">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/arrow_back"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/back_button_desc" />

        <ImageView
            android:id="@+id/logoLayout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logo_avec_titre"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/backButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password?"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/logoLayout"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/descriptionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/forgot_password_desc"
            android:textSize="14sp"
            android:textColor="@color/gray_dark"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/optionEmailCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_reset_option_selector"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/descriptionText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <ImageView
                    android:id="@+id/emailIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/email_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tint="@color/cyan_highlight"
                    />

                <TextView
                    android:id="@+id/emailLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Via email:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/emailIcon"/>

                <TextView
                    android:id="@+id/emailAddressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•••• @gmail.com"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/emailLabel"
                    app:layout_constraintStart_toStartOf="@id/emailLabel"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/optionSmsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_reset_option_selector"
            app:backgroundTint="@null"
            app:layout_constraintTop_toBottomOf="@id/optionEmailCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <ImageView
                    android:id="@+id/smsIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sms_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:tint="@color/cyan_highlight"
                    />

                <TextView
                    android:id="@+id/smsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Via sms:"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/smsIcon"/>

                <TextView
                    android:id="@+id/smsNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•••• •••• 4235"
                    android:textSize="14sp"
                    android:textColor="@color/gray_dark"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/smsLabel"
                    app:layout_constraintStart_toStartOf="@id/smsLabel"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/getStartedButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Get Started"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_gradient_ripple"
            app:backgroundTint="@null"
            android:layout_marginTop="48dp"
            app:cornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/optionSmsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>